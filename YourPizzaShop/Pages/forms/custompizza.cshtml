@page
@model YourPizzaShop.Pages.forms.custompizzaModel
@{
}


<div class="text-center container mainText ">

    <h1>Create your Own Pizza</h1>

    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5rounded-5 alert-light col-4">

        <ul>
           
            <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name" />
             <br />
           <input type="checkbox" asp-for="Pizza.TomatoSauce"/> Tomatosauce
             <br/>
            <input type="checkbox" asp-for="Pizza.Cheese" /> Cheese
            <br />
            <input type="checkbox" asp-for="Pizza.Peperoni" /> Peperoni
            <br />
            <input type="checkbox" asp-for="Pizza.Ham" /> Ham
            <br />
            <input type="checkbox" asp-for="Pizza.Beef" /> Beef
            <br />
            <input type="checkbox" asp-for="Pizza.Tuna" /> Tuna
            <br />
            <input type="checkbox" asp-for="Pizza.Spagetti" /> Spagetti
            <br />
            <input type="checkbox" asp-for="Pizza.Chicken" /> Chicken
            <br />
            <input type="checkbox" asp-for="Pizza.Dodo" /> Dodo
            <br />
                       
        </ul>

        <button class="btn btn-primary mt-1" type="submit">Create My Pizza</button>

    </form>

</div>